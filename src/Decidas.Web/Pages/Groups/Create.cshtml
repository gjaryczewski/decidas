@page
@model CreateModel
@{
    ViewData["Title"] = "Groups";
}

<div class="text-center">
    <h1 class="display-4">Create group</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="form-group">
                    <label asp-for="Request.Name"></label>
                    <input asp-for="Request.Name" class="form-control" />
                    <span asp-validation-for="Request.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Request.StartDate"></label>
                    <input asp-for="Request.StartDate" class="form-control" type="date" />
                    <span asp-validation-for="Request.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Create</button>
                </div>
            </form>
        </section>
    </div>
</div>
